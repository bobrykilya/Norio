{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"es2017",
			"dom"
		],
		"types": [
			"react",
			"react-dom",
			"webappsec-credential-management"
		],
		"jsx": "react-jsx"
	},
	"include": [
		"./src/**/*",
		"../common/**/*"
	],
	"exclude": [
		"node_modules",
		"./**/*.spec.ts"
	]
}