{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "outDir": "dist",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@services/*": ["services/*"],
            "@routers/*": ["routers/*"],
            "@controllers/*": ["controllers/*"],
            "@utils/*": ["utils/*"],
            "@type/*": ["types/*"],
            "@client/*": ["../../client/*"],
            "@shared/*": ["../../shared/*"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./server.ts"
    ],
    "exclude": ["./node_modules", "./**/*.spec.ts"]
}
